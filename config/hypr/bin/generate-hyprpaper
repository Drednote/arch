#!/bin/bash 

monitors=($(hyprctl monitors | grep 'Monitor' | awk '{ print $2 }'))

cat > $HYPR_CONFIG_HOME/hypr/hyprpaper.conf << EOF
ipc = off
preload = $HYPR_CONFIG_HOME/hypr/wallpaper.png
EOF

for monitor in "${monitors[@]}"; do
    echo "wallpaper = $monitor,$HYPR_CONFIG_HOME/hypr/wallpaper.png" >> $HYPR_CONFIG_HOME/hypr/hyprpaper.conf
done
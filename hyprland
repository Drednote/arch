#!/bin/bash

RED='\033[0;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

displayHelp() {
  printf "Usage: hyprland [OPTIONS]\n"
  printf "Options:\n"
  printf "  -h                        show help text\n"
  printf "  --no-install              If not needed to install hyprland packages\n"
}

while getopts ":h" opt; do
  case $opt in
  h)
    displayHelp
    exit 0
    ;;
  esac
done

to_install=true

# Цикл для обработки всех аргументов
while [[ $# -gt 0 ]]; do
  key="$1"
  case $key in
  --no-install)
    to_install=false
    ;;
  *)
    # Обработка неизвестных аргументов
    echo "Неизвестный аргумент: $1"
    ;;
  esac
  shift
done

source resources/envs.env

### Install packages ####
if [[ $to_install == true ]]; then

  source source/install/yay

  #  cpio cmake meson - for hyprpm
  sudo pacman -S --noconfirm hyprpaper xdg-desktop-portal-hyprland qt6-wayland \
    otf-font-awesome ttf-jetbrains-mono inotify-tools libnotify libdbusmenu-gtk3 sassc \
    dunst dolphin wofi sddm foot \
    cpio cmake meson unzip
  #yay -S --noconfirm rustup gtk-layer-shell eww # navbar
  yay -S --noconfirm hyprland-git aylurs-gtk-shell # https://aylur.github.io/ags-docs/config/installation/

  #sudo sh install/eww/install-rust
  source source/install/bun
fi

# plugins like hyprbars
read -p "$(echo -e ${WHITE}"Configure Hyprland plugins? (y,n) ${NC}")" HYPR_PLUG
if [[ $HYPR_PLUG == "Y" || $HYPR_PLUG == "y" ]]; then
  hyprpm update -v
  hyprpm add https://github.com/hyprwm/hyprland-plugins.git -v
fi

sudo systemctl enable sddm

echo -e "${GREEN}==>${WHITE} hypr config home = $HYPR_CONFIG_HOME${NC}"

mkdir -p $HYPR_CONFIG_HOME
yes | cp -Rf config/* $HYPR_CONFIG_HOME/
yes | cp -Rf resources/wallpaper.png $HYPR_CONFIG_HOME/hypr

chmod +x $HYPR_CONFIG_HOME/hypr/launch-hyprland
chmod +x $HYPR_CONFIG_HOME/waybar/launch-waybar
chmod +x $HYPR_CONFIG_HOME/eww/launch-eww
chmod +x $HYPR_CONFIG_HOME/hypr/bin/generate-hyprpaper

sudo sed -i "s|^Exec=.*|Exec=$HYPR_CONFIG_HOME/hypr/launch-hyprland|g" /usr/share/wayland-sessions/hyprland.desktop
